@model IEnumerable<Accounting.Models.AccountBook>

@{
    ViewBag.Title = "記帳清單";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>記帳清單</h2>
<p>
    @Html.ActionLink("新增記帳", "Create")
</p>
<hr />
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>備註</th>
            </tr>
            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => data.Id)
                    </td>
                    <td>
                        @if (data.Categoryyy == 0)
                        {
                            @:支出
                        }
                        else
                        {
                            @:收入
                        }
                    </td>
                    <td>                        
                        @data.Dateee.ToString("yyyy/MM/dd")
                    </td>
                    <td>                        
                        @data.Amounttt.ToString("0,0")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => data.Remarkkk)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>